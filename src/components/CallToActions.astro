import { SaveEmail } from '../api/firebaseConfig';

const handleSubmit = async (event) => {
    event.preventDefault();
    const emailInput = document.getElementById('email-address') as HTMLInputElement;
    if (emailInput) {
        const email = emailInput.value;
        try {
            await SaveEmail(email);
            console.log('Email saved successfully');
            // Aquí puedes agregar cualquier lógica adicional, como mostrar un mensaje de éxito
        } catch (error) {
            console.error('Error saving email:', error);
            // Manejar errores, por ejemplo, mostrando un mensaje de error
        }
    }
}
